{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",          // ("Bundler" also fine in TS 5+)
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "types": ["node"]                    // node types are enough; others auto-resolve
  },
  "include": ["src", "prisma", "src/types/**/*.d.ts"]
}
