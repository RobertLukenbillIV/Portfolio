{
  "compilerOptions": {
    "types": ["vite/client", "node"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true
  },
  "include": ["src", "vite.config.ts", "src/vite-env.d.ts"]
}
